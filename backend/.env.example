# Backend Environment Variables
# Copy this file to .env and fill in your values

# Application Settings
ENVIRONMENT=development
DEBUG=True

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Simulation Defaults
DEFAULT_N_PATHS=5000
DEFAULT_HORIZON_QUARTERS=4
DEFAULT_SIGMA_ANNUAL=0.08

# Risk Metrics
CVAR_CONFIDENCE_LEVELS=0.90,0.95,0.99
VAR_CONFIDENCE_LEVELS=0.90,0.95,0.99

# Optimization
MAX_OPTIMIZATION_ITERATIONS=1000
OPTIMIZATION_TOLERANCE=1e-6

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Database (if needed for future features)
# DATABASE_URL=postgresql://user:password@localhost:5432/volatisense

# External APIs (if needed)
# FX_DATA_API_KEY=your_api_key_here
# FX_DATA_API_URL=https://api.exchangerate.com/v1
